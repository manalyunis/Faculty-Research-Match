# Faculty Research Match - Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Application Configuration
NODE_ENV=production
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OpenAI Configuration (if using OpenAI features)
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PREFIX=faculty_research

# ML Model Configuration
PYTHON_SERVICE_URL=http://localhost:8000
MODEL_CACHE_TTL=3600
EMBEDDING_BATCH_SIZE=32

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30000  # 30 seconds

# Feature Flags
ENABLE_ADVANCED_SIMILARITY=true
ENABLE_CLUSTERING=true
ENABLE_CACHING=true
ENABLE_ANALYTICS=false

# Domain Configuration (replace with your domain)
NEXT_PUBLIC_APP_URL=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,http://localhost:3000

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
ENABLE_MONITORING=false